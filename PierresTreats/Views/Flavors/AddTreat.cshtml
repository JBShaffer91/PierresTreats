@model PierresTreats.Models.Flavor
@{
    ViewBag.Title = "Add Treat";
}

<h2>Add Treat to @Model.Name</h2>

@if (ViewBag.TreatId != null && ((SelectList)ViewBag.TreatId).Any())
{
  <form method="post" asp-controller="Flavors" asp-action="AddTreat">
    <div class="form-group">
      <label for="TreatId">Treat:</label>
      <select class="form-control" id="TreatId" name="TreatId" asp-items="ViewBag.TreatId">
      <option value="0">--Select Treat--</option>
      </select>
    </div>
    <input type="hidden" name="FlavorId" value="@Model.FlavorId" />
    <input type="hidden" name="Name" value="@Model.Name" />
    <button type="submit" class="btn btn-primary">Add</button>
  </form>
}
else
{
  <p>No treats available to add. Please create a treat first.</p>
}
